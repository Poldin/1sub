{
  "name": "@1sub/sdk",
  "version": "1.0.0",
  "description": "Official 1Sub SDK for Node.js - Integrate subscription verification, credit consumption, and webhooks",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./express": {
      "types": "./dist/middleware/express.d.ts",
      "import": "./dist/middleware/express.mjs",
      "require": "./dist/middleware/express.js"
    },
    "./nextjs": {
      "types": "./dist/middleware/nextjs.d.ts",
      "import": "./dist/middleware/nextjs.mjs",
      "require": "./dist/middleware/nextjs.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "1sub",
    "subscription",
    "billing",
    "credits",
    "monetization",
    "saas",
    "api",
    "sdk"
  ],
  "author": "1Sub <support@1sub.io>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/1sub/sdk.git"
  },
  "homepage": "https://1sub.io/docs",
  "bugs": {
    "url": "https://github.com/1sub/sdk/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "express": ">=4.0.0",
    "next": ">=13.0.0"
  },
  "peerDependenciesMeta": {
    "express": {
      "optional": true
    },
    "next": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.2",
    "vitest": "^1.0.4"
  }
}
